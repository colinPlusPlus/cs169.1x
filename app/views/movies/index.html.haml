-#  This file is app/views/movies/index.html.haml
%h1 All Movies
-#= debug(@movies)
-#= debug(movies_path())
%table#movies
  %thead
    %tr
      - if @title_hilite
        %th.hilite= link_to "Movie Title"  , movies_path(:id => 'title_header'), :id => 'title_header'
      - else
        %th= link_to "Movie Title"  , movies_path(:id => 'title_header')
      %th Rating
      - if @date_hilite
        %th.hilite= link_to "Release Date" , movies_path(:id => 'release_date_header'), :id => 'release_date_header'
      - else
        %th= link_to "Release Date", movies_path(:id => 'release_date_header'), :id => 'release_date_header'
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
